<h1>Listing stops</h1>

<table>
  <tr>
    <th>Stopid</th>
    <th>Stopdcode</th>
    <th>Stopname</th>
    <th>Stoplat</th>
    <th>Stoplon</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stops.each do |stop| %>
  <tr>
    <td><%= stop.stopid %></td>
    <td><%= stop.stopdcode %></td>
    <td><%= stop.stopname %></td>
    <td><%= stop.stoplat %></td>
    <td><%= stop.stoplon %></td>
    <td><%= link_to 'Show', stop %></td>
    <td><%= link_to 'Edit', edit_stop_path(stop) %></td>
    <td><%= link_to 'Destroy', stop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

